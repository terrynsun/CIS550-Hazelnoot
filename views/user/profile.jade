extends ../layout

block header
  h1 #{title} <small>#{user.user_name}</small>

block content
  - if (user.affiliation)
    p Network: 
      a(href="/affiliation/#{user.affiliation}") #{user.affiliation}
  - if (!!current_user && user.birthday)
    p Birthday: #{moment(user.birthday).format("MMM YYYY")}
  p User since: #{moment(user.time_created).format("MMM D YYYY")}
  - if (interests.length > 0)
    h4 Interests
    ul
      - for (var i = 0; i < interests.length - 1; i += 1)
        a(href="/search?term=#{interests[i]}")= interests[i]
        , 
      a(href="/search?term=#{interests[interests.length - 1]}")= interests[interests.length - 1]
  - else
    p Interests: (None)

  - if (friends.length > 0)
    h4 Friends
    ul
      - for (var i = 0; i < friends.length; i += 1)
        li: a(href="/user/#{friends[i]}")= friends[i]
    h4 Boards
    ul
      - for (var i = 0; i < boards.length; i += 1)
        li: a(href="/user/#{user.user_name}/#{boards[i]}")= boards[i]
