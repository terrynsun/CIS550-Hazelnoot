doctype 5
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title

    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
  body
    nav.navbar.navbar-inverse(role='navigation')
      .container
        .navbar-header
          a(href='/')
            img(src="/images/HazelnootLogoSmall.png", height=70)
        .collapse.navbar-collapse
          ul.navbar-form-navbar-form.navbar-left(role='search')
            form(role='form', method='POST', action='/search')
              .form-group
                label.hidden(for='search term') Search term
                input(name='term' type='text', placeholder='search me',
                                  style='margin-top: 10%')
                input.btn.btn-navbar.btn-inverse(type='submit')
          ul.nav.navbar-nav.navbar-right
            if !!current_user
              li: a(href='/user/me')= current_user.full_name()
              li: a(href='/user/me/update') Update Profile
              li: a(href='/logout') Logout
            else
              li: a(href='/login') Login
              li: a(href='/register') Register

    .container
      block header
        h1= title

      if !(messages === null || messages === undefined)
        ul.messages
          if Array.isArray(messages)
            if messages.length > 0
              - for (var i = 0; i < messages.length; i += 1)
                li= messages[i]
          else
            li= messages

      block content

    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/bootstrap.min.js')
    block scripts
